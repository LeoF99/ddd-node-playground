{
  "name": "ddd-node-playground",
  "version": "1.0.0",
  "description": "TypeScript NodeJs playground to test ddd best practices and conventions.",
  "main": "server.js",
  "repository": "git@github.com:LeoF99/ddd-node-playground.git",
  "scripts": {
    "test": "yarn run test:unit && yarn run test:int",
    "test:unit": "jest --config ./jest/jest.config.js",
    "test:int": "jest --runInBand --config ./jest/jest.int-config.js",
    "dev": "nodemon src/server.ts",
    "start-dev": "ts-node src/server.ts",
    "start": "ts-node dist/src/server.js",
    "build": "yarn run clean; tsc -p .;yarn run copy-essentials",
    "clean": "rm -rf dist",
    "copy-essentials": "mkdir -p dist/src/contracts && cp src/contracts/*.yaml dist/src/contracts",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "author": "Leo Ferreira<leo.ferreira@dcx.ufpb.br>",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.10",
    "js-yaml": "^4.1.0",
    "swagger-ui-express": "^4.1.6",
    "traceability": "^1.5.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@stryker-mutator/core": "^4.6.0",
    "@stryker-mutator/jest-runner": "^4.6.0",
    "@stryker-mutator/typescript-checker": "^4.6.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^14.14.29",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-boundaries": "^2.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
